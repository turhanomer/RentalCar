@model IEnumerable<RentalCar.Models.Arac>

@{
    ViewData["Title"] = "Araçları Yönet";
}

<div class="container">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Araçları Yönet</h2>
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#aracEkleModal">
            Yeni Araç Ekle
        </button>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Marka</th>
                            <th>Model</th>
                            <th>Yıl</th>
                            <th>Günlük Fiyat</th>
                            <th>Kapasite</th>
                            <th>Yakıt Türü</th>
                            <th>Vites</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var arac in Model)
                        {
                            <tr>
                                <td>@arac.Marka</td>
                                <td>@arac.Model</td>
                                <td>@arac.Yil</td>
                                <td>@arac.GunlukFiyat.ToString("C")</td>
                                <td>@arac.Kapasite Kişilik</td>
                                <td>@arac.YakitTuru</td>
                                <td>@arac.VitesTuru</td>
                                <td>
                                    <span class="badge bg-@(arac.Musait ? "success" : "danger")">
                                        @(arac.Musait ? "Müsait" : "Kirada")
                                    </span>
                                </td>
                                <td>
                                    <button class="btn btn-primary btn-sm" onclick="aracDuzenle(@arac.Id, '@arac.Marka', '@arac.Model', @arac.Yil, @arac.GunlukFiyat, '@arac.ResimUrl', @arac.Kapasite, '@arac.YakitTuru', '@arac.VitesTuru', @arac.Musait.ToString().ToLower())">Düzenle</button>
                                    <button class="btn btn-danger btn-sm" onclick="aracSil(@arac.Id)">Sil</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Yeni Araç Ekleme Modal -->
<div class="modal fade" id="aracEkleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yeni Araç Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="AracEkle" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Marka</label>
                        <input type="text" class="form-control" name="Marka" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Model</label>
                        <input type="text" class="form-control" name="Model" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Yıl</label>
                        <input type="number" class="form-control" name="Yil" required min="1900" max="2024">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Günlük Fiyat</label>
                        <input type="number" step="0.01" class="form-control" name="GunlukFiyat" required min="0">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Resim URL</label>
                        <input type="url" class="form-control" name="ResimUrl">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Kapasite (Kişi)</label>
                        <input type="number" class="form-control" name="Kapasite" required min="1" max="50">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Yakıt Türü</label>
                        <select class="form-select" name="YakitTuru" required>
                            <option value="">Seçiniz</option>
                            <option value="Benzin">Benzin</option>
                            <option value="Dizel">Dizel</option>
                            <option value="LPG">LPG</option>
                            <option value="Elektrik">Elektrik</option>
                            <option value="Hibrit">Hibrit</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Vites Türü</label>
                        <select class="form-select" name="VitesTuru" required>
                            <option value="">Seçiniz</option>
                            <option value="Manuel">Manuel</option>
                            <option value="Otomatik">Otomatik</option>
                            <option value="Yarı Otomatik">Yarı Otomatik</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Araç Düzenleme Modal -->
<div class="modal fade" id="aracDuzenleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Araç Düzenle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="AracDuzenle" method="post">
                <div class="modal-body">
                    <input type="hidden" id="duzenleId" name="Id">
                    <div class="mb-3">
                        <label class="form-label">Marka</label>
                        <input type="text" class="form-control" id="duzenleMarka" name="Marka" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Model</label>
                        <input type="text" class="form-control" id="duzenleModel" name="Model" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Yıl</label>
                        <input type="number" class="form-control" id="duzenleYil" name="Yil" required min="1900" max="2024">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Günlük Fiyat</label>
                        <input type="number" step="0.01" class="form-control" id="duzenleGunlukFiyat" name="GunlukFiyat" required min="0">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Resim URL</label>
                        <input type="url" class="form-control" id="duzenleResimUrl" name="ResimUrl">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Kapasite (Kişi)</label>
                        <input type="number" class="form-control" id="duzenleKapasite" name="Kapasite" required min="1" max="50">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Yakıt Türü</label>
                        <select class="form-select" id="duzenleYakitTuru" name="YakitTuru" required>
                            <option value="">Seçiniz</option>
                            <option value="Benzin">Benzin</option>
                            <option value="Dizel">Dizel</option>
                            <option value="LPG">LPG</option>
                            <option value="Elektrik">Elektrik</option>
                            <option value="Hibrit">Hibrit</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Vites Türü</label>
                        <select class="form-select" id="duzenleVitesTuru" name="VitesTuru" required>
                            <option value="">Seçiniz</option>
                            <option value="Manuel">Manuel</option>
                            <option value="Otomatik">Otomatik</option>
                            <option value="Yarı Otomatik">Yarı Otomatik</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="duzenleMusait" name="Musait">
                            <label class="form-check-label" for="duzenleMusait">
                                Müsait
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function aracDuzenle(id, marka, model, yil, gunlukFiyat, resimUrl, kapasite, yakitTuru, vitesTuru, musait) {
            document.getElementById('duzenleId').value = id;
            document.getElementById('duzenleMarka').value = marka;
            document.getElementById('duzenleModel').value = model;
            document.getElementById('duzenleYil').value = yil;
            document.getElementById('duzenleGunlukFiyat').value = gunlukFiyat;
            document.getElementById('duzenleResimUrl').value = resimUrl || '';
            document.getElementById('duzenleKapasite').value = kapasite;
            document.getElementById('duzenleYakitTuru').value = yakitTuru;
            document.getElementById('duzenleVitesTuru').value = vitesTuru;
            document.getElementById('duzenleMusait').checked = musait === 'true';
            
            new bootstrap.Modal(document.getElementById('aracDuzenleModal')).show();
        }

        function aracSil(id) {
            if (confirm('Are you sure you want to delete this vehicle?')) {
                fetch(`/Yonetici/AracSil/${id}`)
                    .then(response => {
                        if (response.ok) {
                            window.location.reload();
                        } else {
                            alert('An error occurred while deleting the vehicle.');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('An error occurred while deleting the vehicle.');
                    });
            }
        }
    </script>
} 