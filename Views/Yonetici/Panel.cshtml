@model IEnumerable<RentalCar.Models.KiralamaTalebi>

@{
    ViewData["Title"] = "Yönetici Paneli";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Yönetici Paneli</h2>
        <div>
            <a asp-action="AracYonetimi" class="btn btn-primary me-2">Araçları Yönet</a>
            <a asp-action="Cikis" class="btn btn-danger">Çıkış Yap</a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Kiralama Talepleri</h5>
                <div class="btn-group">
                    <button type="button" class="btn btn-outline-primary btn-sm filter-btn active" data-status="all">Tümü</button>
                    <button type="button" class="btn btn-outline-warning btn-sm filter-btn" data-status="Beklemede">Bekleyenler</button>
                    <button type="button" class="btn btn-outline-success btn-sm filter-btn" data-status="Onaylandı">Onaylananlar</button>
                    <button type="button" class="btn btn-outline-danger btn-sm filter-btn" data-status="Reddedildi">Reddedilenler</button>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    Henüz kiralama talebi bulunmamaktadır.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Araç</th>
                                <th>Müşteri</th>
                                <th>İletişim</th>
                                <th>Tarihler</th>
                                <th>Talep Tarihi</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var talep in Model)
                            {
                                <tr class="rental-row" data-status="@talep.Durum">
                                    <td>@(talep.Arac != null ? $"{talep.Arac.Marka} {talep.Arac.Model}" : "Araç Bilgisi Yok")</td>
                                    <td>@talep.MusteriAdi</td>
                                    <td>
                                        <small>
                                            <div>@talep.MusteriEmail</div>
                                            <div>@talep.MusteriTelefon</div>
                                        </small>
                                    </td>
                                    <td>
                                        <small>
                                            <div>Başlangıç: @talep.BaslangicTarihi.ToShortDateString()</div>
                                            <div>Bitiş: @talep.BitisTarihi.ToShortDateString()</div>
                                        </small>
                                    </td>
                                    <td>@talep.TalepTarihi.ToShortDateString()</td>
                                    <td>
                                        <span class="badge bg-@(talep.Durum == "Beklemede" ? "warning" : 
                                                              talep.Durum == "Onaylandı" ? "success" : "danger")">
                                            @talep.Durum
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            @if (talep.Durum == "Beklemede")
                                            {
                                                <form asp-action="KiralamaDurumuGuncelle" method="post" class="me-1">
                                                    <input type="hidden" name="id" value="@talep.Id" />
                                                    <input type="hidden" name="durum" value="Onaylandı" />
                                                    <button type="submit" class="btn btn-success btn-sm">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>
                                                <form asp-action="KiralamaDurumuGuncelle" method="post" class="me-1">
                                                    <input type="hidden" name="id" value="@talep.Id" />
                                                    <input type="hidden" name="durum" value="Reddedildi" />
                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </form>
                                            }
                                            <form asp-action="KiralamaTalebiSil" method="post" onsubmit="return confirm('Bu kiralama talebini silmek istediğinizden emin misiniz?');">
                                                <input type="hidden" name="id" value="@talep.Id" />
                                                <button type="submit" class="btn btn-dark btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Filtre butonları için event listener
            document.querySelectorAll('.filter-btn').forEach(button => {
                button.addEventListener('click', function() {
                    // Aktif butonu güncelle
                    document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Seçilen duruma göre satırları filtrele
                    const durum = this.dataset.status;
                    document.querySelectorAll('.rental-row').forEach(row => {
                        if (durum === 'all' || row.dataset.status === durum) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                    });
                });
            });
        });
    </script>
} 