<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Araç Kiralama</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RentalCar.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <header>
        <!-- Üst Header -->
        <div class="top-header py-2">
            <div class="container">
                <div class="d-flex justify-content-end align-items-center">
                    <div class="me-4">
                        <i class="fas fa-envelope me-2"></i>
                        <span>ozdogancar@gmail.com</span>
                    </div>
                    <div>
                        <i class="fas fa-phone-alt me-2"></i>
                        <span>(0224) 294 26 95</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ana Header -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
            <div class="container">
                <a class="navbar-brand" asp-controller="Anasayfa" asp-action="Index">
                    <img src="/images/logo.png" alt="Özdoğan Car" height="50" class="d-inline-block align-text-top">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link px-3 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" 
                               asp-controller="Anasayfa" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Araclar" ? "active" : "")" 
                               asp-controller="Anasayfa" asp-action="Araclar">Araçlar ve Fiyatlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Iletisim" ? "active" : "")" 
                               asp-controller="Anasayfa" asp-action="Iletisim">İletişim</a>
                        </li>
                    </ul>
                    <div class="ms-auto">
                        <a class="btn btn-outline-dark" asp-controller="Yonetici" asp-action="Giris">
                            <i class="fas fa-user me-2"></i>Admin Girişi
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container py-4">
            <div class="row g-4 align-items-center">
                <div class="col-lg-4 col-md-12 text-center text-lg-start">
                    <img src="/images/logo.png" alt="Özdoğan Car" height="40" class="mb-3">
                    <p class="text-muted mb-0">Güvenilir ve kaliteli araç kiralama hizmeti.</p>
                </div>
                <div class="col-lg-4 col-md-12 text-center">
                    <div class="footer-contact">
                        <p class="mb-2"><i class="fas fa-map-marker-alt me-2"></i>Uludağ Üniversitesi İnegöl Yerleşkesi</p>
                        <p class="mb-2"><i class="fas fa-phone me-2"></i>(0224) 294 26 95</p>
                        <p class="mb-0"><i class="fas fa-envelope me-2"></i>ozdogancar@gmail.com</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12 text-center text-lg-end">
                    <div class="social-links mb-3">
                        <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
                    </div>
                    <p class="copyright mb-0">&copy; @DateTime.Now.Year Özdoğan Car. Tüm hakları saklıdır.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
