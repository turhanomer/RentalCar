@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const track = document.querySelector('.brand-track');
            if (track) {
                track.style.animation = 'none';
                track.offsetHeight; // Reflow
                track.style.animation = 'slide 40s linear infinite';
            }
        });
    </script>
}

