@model RentalCar.Models.Arac

@{
    ViewData["Title"] = $"{Model.Marka} {Model.Model}";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ResimUrl))
            {
                <img src="@Model.ResimUrl" class="img-fluid rounded" alt="@Model.Marka @Model.Model">
            }
            else
            {
                <img src="~/images/default-car.jpg" class="img-fluid rounded" alt="Default Car Image">
            }
        </div>
        <div class="col-md-6">
            <h2>@Model.Marka @Model.Model</h2>
            <p class="lead">@Model.Yil Model</p>
            <h4 class="text-primary">@Model.GunlukFiyat.ToString("C") / Gün</h4>
            @if (!string.IsNullOrEmpty(Model.Aciklama))
            {
                <p>@Model.Aciklama</p>
            }

            @if (Model.Musait)
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0">Kiralama Talebi</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="KiralamaTalebiGonder" method="post">
                            <input type="hidden" name="aracId" value="@Model.Id" />
                            
                            <div class="mb-3">
                                <label class="form-label">Ad Soyad</label>
                                <input type="text" name="musteriAdi" class="form-control" required />
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" name="musteriEmail" class="form-control" required />
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Telefon</label>
                                <input type="tel" name="musteriTelefon" class="form-control" required />
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Başlangıç Tarihi</label>
                                <input type="date" name="baslangicTarihi" class="form-control" required min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Bitiş Tarihi</label>
                                <input type="date" name="bitisTarihi" class="form-control" required />
                            </div>
                            
                            <button type="submit" class="btn btn-primary">Kiralama Talebi Gönder</button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning mt-4">
                    Bu araç şu anda kiralamaya uygun değil.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var baslangicTarihiInput = document.querySelector('input[name="baslangicTarihi"]');
            var bitisTarihiInput = document.querySelector('input[name="bitisTarihi"]');
            
            baslangicTarihiInput.addEventListener('change', function() {
                bitisTarihiInput.min = this.value;
            });
        });
    </script>
} 